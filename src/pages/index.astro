    <script is:inline>
      (() => {
        const overlay = document.getElementById("spotlightOverlay");
        const modal = document.getElementById("spotlightModal");
        const closeBtn = document.getElementById("spotlightClose");
        const content = document.getElementById("spotlightContent");
        const titleEl = document.getElementById("spotlightTitle");

       const open = (card) => {
  const cloneSrc = card.querySelector("[data-card-clone]");
  if (!cloneSrc) return;

  // Clone the whole visible card content
  const clone = cloneSrc.cloneNode(true);

  // Remove any elements we don't want inside the modal (expand button etc.)
  clone.querySelectorAll("[data-no-spotlight]").forEach((el) => el.remove());

  content.innerHTML = "";
  content.appendChild(clone);

  overlay.setAttribute("data-open", "true");
  modal.setAttribute("data-open", "true");
  document.documentElement.classList.add("modal-lock");
};
const close = () => {
  modal.setAttribute("data-open", "false");
  overlay.setAttribute("data-open", "false");
  content.innerHTML = "";
  document.documentElement.classList.remove("modal-lock");
};
        // close actions
        overlay.addEventListener("click", close);
        closeBtn.addEventListener("click", close);
        window.addEventListener("keydown", (e) => {
          if (e.key === "Escape" && !modal.classList.contains("hidden")) close();
        });

        // expand button delegation
        document.addEventListener("click", (e) => {
          const btn = e.target.closest("[data-expand]");
          if (!btn) return;

          const card = btn.closest("[data-bento-card]");
          if (!card) return;

          e.preventDefault();
          e.stopPropagation();
          open(card);
        });
      })();
