/* Subtle minimal texture (optional; remove if you want pure white) */
.bg-grid {
  background-image: radial-gradient(rgba(0,0,0,0.05) 1px, transparent 1px);
  background-size: 22px 22px;
  background-position: -8px -8px;
}

/* ===== Spotlight modal ===== */
html.modal-lock {
  overflow: hidden;
}

/* The modal card container (centered) */
#spotlightModal {
  transform: translate(-50%, -50%) scale(0.98);
  opacity: 0;
  transition: transform 180ms ease, opacity 180ms ease;
}
#spotlightModal[data-open="true"] {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}
#spotlightOverlay {
  opacity: 0;
  pointer-events: none;
  transition: opacity 200ms ease;
}
#spotlightOverlay[data-open="true"] {
  opacity: 1;
  pointer-events: auto;
}

/* Modal smooth zoom */
#spotlightModal {
  opacity: 0;
  transform: translate(-50%, -50%) scale(0.96);
  pointer-events: none;
  transition: transform 220ms ease, opacity 220ms ease;
}
#spotlightModal[data-open="true"] {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
  pointer-events: auto;
}

@media (prefers-reduced-motion: reduce) {
  #spotlightOverlay, #spotlightModal {
    transition: none;
  }
}
